---
import "@fontsource-variable/fredoka";
import "open-props/style";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    background: #ffffff;
    position: relative;
  }

  /* Add a field of dancing dots in the background */
  body::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    background: radial-gradient(
        circle at 8px 8px,
        #ededed 1.5px,
        transparent 2px
      ),
      radial-gradient(circle at 24px 24px, #ededed 1.5px, transparent 2px);
    background-size: 32px 32px;
    animation: wiggle1 3s ease-in-out infinite;
  }

  /* Add a second field animated on a different interval for some randomization */
  body::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    background: radial-gradient(
        circle at 24px 8px,
        #ededed 1.5px,
        transparent 2px
      ),
      radial-gradient(circle at 8px 24px, #ededed 1.5px, transparent 2px);
    background-size: 32px 32px;
    animation: wiggle2 4s ease-in-out infinite;
  }

  @keyframes wiggle1 {
    0%,
    100% {
      transform: translate(0, 0);
    }
    25% {
      transform: translate(1px, -1px);
    }
    50% {
      transform: translate(-1px, 1px);
    }
    75% {
      transform: translate(2px, 0);
    }
  }

  @keyframes wiggle2 {
    0%,
    100% {
      transform: translate(0, 0);
    }
    33% {
      transform: translate(-1px, 2px);
    }
    66% {
      transform: translate(2px, -1px);
    }
  }
</style>
