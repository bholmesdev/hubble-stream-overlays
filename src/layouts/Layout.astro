---
import "@fontsource-variable/fredoka";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    /* Subtle bullet journal: tiny dot grid over pure white */
    background:
      radial-gradient(circle at 1px 1px, rgba(0, 0, 0, 0.18) 0.6px, transparent 0.7px) 0 0/20px 20px,
      #ffffff;
  }
</style>
