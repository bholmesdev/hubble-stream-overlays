---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="brb">
    <h1 class="title">be right back!</h1>
  </main>
</Layout>

<style>
  .brb {
    min-height: 100svh;
    display: grid;
    place-items: center;
    /* Subtle bullet journal: tiny dot grid over pure white */
    background:
      radial-gradient(circle at 1px 1px, rgba(0, 0, 0, 0.18) 0.6px, transparent 0.7px) 0 0/20px 20px,
      #ffffff;
  }

  .title {
    margin: 0;
    line-height: 1.5;
    font-weight: 600;
    letter-spacing: -0.02em;
    font-size: clamp(48px, 12vw, 160px);

    /* 3D pop: dark metallic gradient + layered shadows */
    background: linear-gradient(180deg, #222 0%, #151515 40%, #000 60%, #1a1a1a 85%);
    background-size: 100% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;

    /* Depth without white rim to avoid the descender strip */
    text-shadow:
      0 2px 0 rgba(0, 0, 0, 0.3),
      0 6px 10px rgba(0, 0, 0, 0.35),
      0 12px 24px rgba(0, 0, 0, 0.35);
  }

  @media (prefers-color-scheme: dark) {
    .brb {
      background:
        radial-gradient(circle at 1px 1px, rgba(255, 255, 255, 0.18) 0.6px, transparent 0.7px) 0 0/20px 20px,
        linear-gradient(#121212, #0f0f0f);
    }

    .title {
      text-shadow:
        0 2px 0 rgba(0, 0, 0, 0.4),
        0 6px 10px rgba(0, 0, 0, 0.4),
        0 12px 24px rgba(0, 0, 0, 0.45);
    }
  }}
</style>

