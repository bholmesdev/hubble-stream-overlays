---
import Layout from "../layouts/Layout.astro";

export const prerender = false;

const text = Astro.url.searchParams.get("text");
---

<Layout>
  <main>
    {text ? <h1 class="title">{text}</h1> : null}
  </main>
</Layout>

<style>
  main {
    min-height: 100svh;
    display: grid;
    place-items: center;
    position: relative;
    z-index: 1;
  }

  .title {
    margin: 0;
    line-height: 1.3;
    font-weight: 600;
    letter-spacing: -0.02em;
    font-size: clamp(48px, 12vw, 160px);
    text-align: center;
    padding-inline: 4rem;

    /* 3D pop: dark metallic gradient + layered shadows */
    background: linear-gradient(
      180deg,
      #222 0%,
      #151515 40%,
      #000 60%,
      #1a1a1a 85%
    );
    background-size: 100% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;

    /* Depth without white rim to avoid the descender strip */
    text-shadow:
      0 2px 0 rgba(0, 0, 0, 0.3),
      0 6px 10px rgba(0, 0, 0, 0.35),
      0 12px 24px rgba(0, 0, 0, 0.35);

    /* Bouncing animation */
    animation: bounce 2s var(--ease-spring-5) infinite;
  }

  @keyframes bounce {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: scale(1.03);
    }
    100% {
      transform: translateY(0);
    }
  }
</style>
